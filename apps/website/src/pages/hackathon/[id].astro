<style>
	.block {
		background: var(--black);
		container: block / inline-size;
		display: flex;
		flex-wrap: wrap;
		gap: 20px;
		justify-content: center;
		padding-block: 40px;
		padding-inline: max((100% - var(--max-width)) / 2, 5%);
	}

	.two-column-asymmetrical {
		align-items: start;
		display: grid;
		gap: 40px;
		grid-template-columns: 300px minmax(0, 640px);

		.heading {
			justify-self: end;

			h2 {
				font-weight: 400;

				&::after {
					content: ' →';
				}
			}
		}
	}

	.overview {
	}

	.hackathon-details {
		background: var(--bg);
		border: 0.5px solid color-mix(in oklch, var(--gray-600), transparent);
		border-radius: 3px;
		display: flex;
		flex-direction: column;
		gap: 40px;
		justify-content: space-between;
		padding: 16px;

		dl {
			align-items: center;
			display: grid;
			font-size: 0.75em;
			grid-template-columns: repeat(2, minmax(0, 1fr));
			grid-template-rows: repeat(3, minmax(0, 40px));
			letter-spacing: 0.25em;
			text-transform: uppercase;
		}

		dt {
			color: var(--text-muted);
		}

		dd {
			align-items: center;
			color: var(--text-emphasized);
			display: flex;
			gap: 8px;
			justify-content: end;

			.status {
				block-size: 12px;
				border-radius: 50%;
				display: block;
				inline-size: 12px;

				&.active {
					background: #79f664;
				}
			}
		}

		.button {
			text-align: center;
		}
	}

	.challenge {
		padding-inline: 16px;
	}

	h2 {
		font-family: var(--font-family-heading);
		font-size: clamp(1.75rem, 3.75cqi, 4.25rem);
		font-weight: normal;
		line-height: 1;
		margin: 0;
	}

	.copy {
		display: flex;
		flex-direction: column;
		gap: 16px;

		.lede {
			color: var(--text-emphasized);
			font-size: 1.5em;
			font-weight: 300;
			line-height: 1.25;
		}
	}

	figure {
		inline-size: min(90cqi, 980px);

		lite-youtube {
			block-size: auto;
			max-inline-size: 100%;
		}

		figcaption {
			color: var(--text-muted);
			display: flex;
			font-size: 0.875em;
			justify-content: space-between;
			padding-block: 8px;

			a {
				color: var(--text-emphasized);
				font-weight: 500;
				text-decoration: none;
			}
		}
	}

	.rewards {
		flex-direction: column;
		align-items: center;
	}

	.rewards-list {
		display: grid;
		gap: 16px;
		grid-template-columns: repeat(3, minmax(0, 316px));
	}

	.reward {
		background: var(--bg);
		border: 0.5px solid color-mix(in oklch, var(--gray-600), transparent);
		border-radius: 3px;
		display: flex;
		flex-direction: column;
		gap: 16px;

		img {
			border-block-end: 0.5px solid
				color-mix(in oklch, var(--gray-600), transparent);
			border-radius: 3px 3px 0 0;
		}

		.details {
			display: flex;
			flex-direction: column;
			gap: 8px;
			padding: 0 16px 16px;
		}

		h3 {
			font-size: clamp(1em, 3.5cqi, 1.125em);
			line-height: 1.1;
			margin: 0;
		}
	}

	.sponsor {
		align-items: center;
		background: var(--bg);
		border-block: 0.5px solid
			color-mix(in oklch, var(--orange) 20%, transparent);
		color: var(--text-emphasized);
		display: flex;
		gap: 24px;

		p {
			align-items: center;
			display: flex;
			gap: 8px;
		}

		svg {
			block-size: 32px;
			margin-block-start: 4px;
		}

		.button {
			margin: 0;
		}
	}

	.list {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}

	.list-item {
		display: flex;
		flex-direction: column;
		gap: 4px;
		padding: 8px 16px;

		&.border {
			background: var(--bg);
			border: 0.5px solid color-mix(in oklch, var(--gray-600), transparent);
			border-radius: 3px;
			padding: 16px;
		}
	}

	.list-item-text {
		color: var(--text-emphasized);
		font-weight: 500;
		line-height: 1.1;

		a {
			color: inherit;
			text-decoration: none;

			&:is(:hover, :active, :hover) {
				text-decoration: underline;
			}
		}
	}

	.list-item-description {
		color: var(--text-muted);
		line-height: 1.25;
	}

	.list-fine-print {
		color: var(--text-muted);
		font-size: 0.75em;
		padding-inline: 16px;
	}
</style>

<style is:global>
	.hero > h1 > .line-2 {
		font-size: 0.5em !important;
		letter-spacing: -0.01em !important;
	}
</style>
