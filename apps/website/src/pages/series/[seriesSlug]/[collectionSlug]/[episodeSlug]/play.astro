<style>
	:root {
		--header-height: 70px;

		@media screen and (orientation: landscape) {
			--header-height: 40px;
		}
	}

	header {
		align-items: center;
		block-size: var(--header-height);
		display: flex;
		font-size: 1rem;
		gap: 16px;
		padding: 8px 16px;

		a {
			color: var(--text-muted);
			font-size: 1.5em;
			text-decoration: none;
			transition: 150ms linear color;

			&:is(:hover, :active, :focus) {
				color: var(--text-emphasized);
			}
		}

		.episode-info {
			align-items: baseline;
			display: flex;
			flex-wrap: wrap;
			gap: 4px 16px;
			inline-size: 100%;
			justify-content: space-between;
			overflow: hidden;
		}

		.details {
			align-items: center;
			display: flex;
			flex-wrap: nowrap;
			gap: 8px;
		}

		h1 {
			font-size: 1.125em;
			line-height: 1.1;
		}

		p {
			color: var(--text-muted);
			font-size: 0.75em;
			font-weight: 400;
			inline-size: auto;
			letter-spacing: 0.15em;
			margin: 0;
			text-box: trim-both cap alphabetic;
			text-transform: uppercase;
			text-wrap: nowrap;
		}

		h1,
		p {
			overflow: hidden;
			text-overflow: ellipsis;
			text-wrap: nowrap;
		}

		svg {
			block-size: 0.5em;
			display: block;
			inline-size: auto;
			position: relative;
		}
	}

	.video-wrapper {
		block-size: calc(100dvb - var(--header-height));
		container: video-wrapper / size;

		lite-youtube {
			background-repeat: no-repeat;
			background-size: contain;

			@media screen and (orientation: landscape) {
				background-size: cover;
			}
		}
	}
</style>
