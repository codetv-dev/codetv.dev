---
export interface Props {
	youtube_id: string;
	title?: string;
	autoplay: boolean;
}

const { youtube_id, title, autoplay = false } = Astro.props;
---

<iframe
	title={title}
	width="1440"
	height="762"
	src={`https://www.youtube-nocookie.com/embed/${youtube_id}?origin=${Astro.url}&autoplay=${autoplay ? '1' : '0'}&rel=0`}
	frameborder="0"
	allow="autoplay; encrypted-media"
	allowfullscreen></iframe>

<style>
	iframe {
		aspect-ratio: 16 / 9;
		block-size: 100cqb;
		margin-inline: auto;
		max-inline-size: 100dvi;
	}
</style>
