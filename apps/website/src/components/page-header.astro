---
import { createImageUrl } from '@codetv/cloudinary';
import { Image } from '@unpic/astro';

export interface Props {
	line1?: string;
	line2?: string;
	image: {
		public_id: string;
		alt: string;
	};
	aspectRatio?: number;
	addGradient?: boolean;
}

const {
	line1,
	line2,
	image,
	aspectRatio = 1728 / 795,
	addGradient = false,
} = Astro.props;

const imgUrl = createImageUrl(image.public_id, {
	aspect_ratio: aspectRatio,
	crop: 'fill',
});
---

<section class="hero" data-variant={addGradient ? 'gradient' : undefined}>
	<slot name="content">
		<h1>
			<span class="line-1">{line1}</span>
			<span class="line-2">{line2}</span>
		</h1>
	</slot>
	<Image src={imgUrl} alt={image.alt} aspectRatio={aspectRatio} />
</section>

<style>
	@layer site-base {
		.hero {
			position: relative;

			&[data-variant='gradient'] {
				&::before,
				&::after {
					content: '';
					inset: 0;
					position: absolute;
					z-index: 5;
				}

				&::after {
					background: linear-gradient(
						to top,
						var(--black),
						color-mix(in oklch, var(--black), transparent 100%) 33%
					);
				}

				&::before {
					background: linear-gradient(
						to right,
						var(--black),
						color-mix(in oklch, var(--black), transparent 100%) 60%
					);
				}
			}

			h1 {
				font-size: clamp(1rem, 11cqi, 11rem);
				font-weight: 900;
				font-variation-settings: 'wdth' 80;
				inline-size: min(90%, 1450px);
				inset-block-end: 0;
				line-height: 0.8;
				margin: 0 max(5%, (100% - 1450px) / 2);
				position: absolute;
				text-box-trim: trim-both;
				text-shadow: 0 1px 3px
					color-mix(in oklch, var(--black) 50%, transparent);
				text-transform: uppercase;
				word-spacing: 0.1em;
				z-index: 10;

				.line-1,
				.line-2 {
					display: block;
				}

				.line-2 {
					color: var(--orange);
					font-size: 0.92em;
					text-align: end;
				}
			}

			img {
				display: block;
				z-index: 1;
			}
		}
	}
</style>
