---
import { Search as AlgoliaSearch } from './';
---

<AlgoliaSearch client:only="react" />

<style is:global>
	/* Algolia search */
	.aa-OpenButton {
		display: flex;
		align-items: center;
		font-size: 1em;
		padding: 16px 12px 16px 8px;
		border-radius: 3px;
		background: var(--orange);
		border: none;
		color: var(--black);
		font-family: var(--font-family);
		cursor: pointer;
	}

	.aa-OpenButton svg {
		display: block;
		height: auto;
		margin-right: 4px;
		width: 12px;
	}

	.aa-OpenButtonText[data-viewport='small'] {
		display: block;
	}

	.aa-OpenButtonText[data-viewport='large'] {
		display: none;
	}

	@media (min-width: 760px) {
		.aa-OpenButtonText[data-viewport='small'] {
			display: none;
		}

		.aa-OpenButtonText[data-viewport='large'] {
			display: block;
		}
	}

	.aa-Backdrop {
		position: fixed;
		background: color-mix(in oklch, var(--bg) 95%, transparent);
		inset: 0;
		padding: 40px;
		z-index: 1000;
	}

	.aa-Autocomplete {
		background: var(--black);
		block-size: 100%;
		border: 1px solid color-mix(in oklch, var(--text-muted), var(--black));
		border-radius: 3px;
		box-shadow:
			color-mix(in oklch, var(--black) 10%, transparent) 0 1px 0,
			color-mix(in oklch, var(--black) 10%, transparent) 0 8px 24px,
			color-mix(in oklch, var(--black) 10%, transparent) 0 16px 48px;
		color: var(--text);
		display: flex;
		flex-direction: column;
		inline-size: 100%;
		margin: 0 auto;
		max-block-size: 630px;
		max-inline-size: 840px;
		min-block-size: 200px;
		position: relative;
		z-index: 10000;
	}

	.aa-Form {
		align-items: center;
		display: grid;
		flex: 0;
		grid-template-columns: 48px 1fr auto;
		place-items: center;
	}

	.aa-InputWrapper {
		inline-size: 100%;
	}

	.aa-InputWrapperPrefix,
	.aa-InputWrapperSuffix {
		block-size: 100%;
		inline-size: 100%;
	}

	.aa-Label,
	.aa-InputWrapperSuffix {
		align-items: center;
		block-size: 100%;
		display: flex;
		justify-content: center;
	}

	.aa-Label svg {
		block-size: 20px;
		inline-size: 20px;
	}

	.aa-SpinnerIcon {
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		to {
			transform: rotate(1turn);
		}
	}

	.aa-SpinnerIcon circle {
		opacity: 0.25;
	}

	.aa-SpinnerIcon path {
		opacity: 0.75;
	}

	.aa-Input {
		background: var(--bg);
		border: none;
		color: var(--text-emphasized);
		font-family: var(--font-family);
		font-size: 1rem;
		inline-size: 100%;
		margin: 0;
		overflow: hidden;
		padding: 20px;
		text-overflow: ellipsis;
		white-space: nowrap;
		-webkit-appearance: textfield;
	}

	.aa-Input::-webkit-search-decoration,
	.aa-Input::-webkit-search-cancel-button,
	.aa-Input::-webkit-search-results-button,
	.aa-Input::-webkit-search-results-decoration {
		appearance: none;
		-webkit-appearance: none;
	}

	.aa-Input:focus {
		outline: none;
	}

	.aa-ClearButton {
		background: none;
		block-size: 100%;
		border: none;
		color: var(--text-muted);
		cursor: pointer;
		padding: 0 20px;
		transition: color 0.1s linear;
	}

	.aa-ClearButton:hover {
		color: var(--text-muted);
	}

	.aa-ClearButton svg {
		block-size: 16px;
		inline-size: 16px;
		margin-block-start: 4px;
	}

	.aa-CancelButton {
		background: none;
		border: none;
		cursor: pointer;
		margin: 0;
		height: 100%;
		padding: 0 16px;
		color: var(--text-muted);
		font-size: 0.85rem;
		transition: color 0.1s linear;
		border-left: 1px solid color-mix(in oklch, var(--text-muted), var(--black));
		font-family: var(--font-family);
	}

	.aa-CancelButton:hover {
		color: var(--text-muted);
	}

	.aa-Panel {
		flex-grow: 1;
		height: 100%;
		overflow-y: scroll;
		border-top: 1px solid color-mix(in oklch, var(--text-muted), var(--black));
	}

	.aa-Panel--stalled {
		filter: grayscale(1);
		opacity: 0.8;
		overflow: hidden;
	}

	.aa-List {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.aa-Source {
		padding: 4px;
	}

	.aa-Source[id='autocomplete-latest'] .aa-List,
	.aa-Source[id='autocomplete-schedule'] .aa-List {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 4px;
	}

	.aa-Header {
		padding: 0 16px;
		margin-bottom: 16px;
		font-size: 0.85em;
		font-weight: 600;
		color: var(--text);
	}

	.aa-List > :not([hidden]) ~ :not([hidden]) {
		margin-block-start: 4px;
	}

	.aa-Item {
		display: flex;
		align-items: center;
		transition: background 0.1s linear;
	}

	.aa-Link {
		align-items: center;
		border-radius: 3px;
		color: var(--text);
		display: flex;
		inline-size: 100%;
		line-height: 1.3;
		padding: 8px;
		text-decoration: none;
	}

	a.aa-Link {
		color: var(--text);
	}

	.aa-LinkItem {
		align-items: center;
		display: flex;
		inline-size: 100%;
		justify-content: space-between;
	}

	.aa-LinkItem-Content {
		align-items: center;
		display: flex;
		gap: 16px;
	}

	.aa-Item mark {
		background: var(--orange);
		border-radius: 3px;
		padding: 0 4px;
	}

	.aa-Item[aria-selected='true'] .aa-Link {
		background: var(--bg);
	}

	.aa-Item .button {
		inline-size: 100%;
		margin: 8px;
		transition: background 0.1s linear;
	}

	.aa-Item[aria-selected='true'] .button {
		background: var(--orange);
		border-color: var(--orange);
		color: var(--white);
	}

	.aa-LinkText {
		margin-inline-start: 12px;
	}

	.aa-LinkLabel {
		display: -webkit-box;
		font-size: 1rem;
		font-weight: 600;
		overflow: hidden;
		-webkit-box-orient: vertical;
		-webkit-line-clamp: 2;
	}

	.aa-LinkDescription {
		color: var(--text-muted);
		display: -webkit-box;
		font-size: 0.875rem;
		line-height: 1.35;
		margin-block-start: 4px;
		overflow: hidden;
		-webkit-box-orient: vertical;
		-webkit-line-clamp: 3;
	}

	.aa-LinkPicture {
		align-items: center;
		block-size: 100%;
		display: flex;
		flex: none;
		inline-size: 100%;
		justify-content: center;
	}

	.aa-LinkPicture--Twitch {
		background: #9146ff;
	}

	.aa-LinkPicture--Twitch svg {
		position: relative;
		top: 5px;
		right: 2px;
		padding: 4px;
	}

	.aa-LinkPicture--YouTube {
		background: red;
	}

	.aa-LinkIcon {
		block-size: 16px;
		color: transparent;
		flex: none;
		inline-size: 16px;
		margin-inline-start: 8px;
		transition: color 0.1s linear;
	}

	.aa-Item[aria-selected='true'] .aa-LinkIcon {
		color: var(--text);
	}

	.aa-Icon {
		block-size: 40px;
		border-radius: 3px;
		flex: none;
		inline-size: 40px;
		margin-inline-start: 12px;
		overflow: hidden;
	}

	.aa-Icon svg {
		block-size: 100%;
		inline-size: 100%;
	}

	.aa-Participants {
		align-items: center;
		display: flex;
		flex: none;
		inline-size: 96px;
		justify-content: end;
	}

	.aa-Participant {
		block-size: 64px;
		inline-size: 64px;
		flex: none;
		margin-inline-start: -32px;
	}

	.aa-Participant--first {
		margin-inline-start: 0;
	}

	.aa-CoverImage {
		block-size: auto;
		border-radius: 3px;
		flex: none;
		inline-size: 160px;
		margin-inline-start: 12px;
	}

	.aa-NoResults {
		align-items: center;
		block-size: 100%;
		display: flex;
		flex-direction: column;
		inline-size: 100%;
		justify-content: center;
		padding: 8px;
		text-align: center;
	}

	.aa-NoResultsLabel {
		display: -webkit-box;
		font-size: 1.1em;
		font-weight: 600;
		margin-block-start: 8px;
		overflow: hidden;
		-webkit-box-orient: vertical;
		-webkit-line-clamp: 1;
	}

	.aa-NoResultsDescription {
		font-size: 0.9em;
		color: var(--text-muted);
		margin-block-end: 16px;
	}

	.aa-NoResultsImage {
		inline-size: 160px;
	}

	.aa-Footer {
		border-top: 1px solid color-mix(in oklch, var(--text-muted), var(--black));
		display: flex;
		flex: none;
		justify-content: end;
		padding: 12px 16px;
		position: relative;
	}

	.aa-AlgoliaLogo a {
		align-items: center;
		color: var(--text-muted);
		display: flex;
		text-decoration: none;
	}

	.aa-AlgoliaLabel {
		font-size: 0.6em;
		margin-inline-end: 8px;
	}

	.aa-AlgoliaLogo svg,
	.aa-AlgoliaLabel {
		flex: none;
	}

	.aa-AlgoliaLogo svg {
		block-size: 16px;
		inline-size: 48px;
	}

	@media (max-width: 750px) {
		.aa-Backdrop {
			padding: 16px;
		}

		.aa-Source[id='autocomplete-latest'] .aa-List,
		.aa-Source[id='autocomplete-schedule'] .aa-List {
			grid-template-columns: 1fr;
		}

		.aa-CoverImage {
			inline-size: 200px;
		}
	}

	@media (max-width: 600px) {
		.aa-Backdrop {
			padding: 0;
		}

		.aa-Autocomplete {
			border-radius: 0;
			max-block-size: none;
		}

		.aa-CoverImage {
			block-size: 80px;
			inline-size: 80px;
			object-fit: cover;
			object-position: center;
		}

		.aa-LinkIcon {
			display: none;
		}
	}

	@media (max-width: 450px) {
		.aa-LinkDescription {
			-webkit-line-clamp: 1;
		}

		.aa-CoverImage {
			block-size: 64px;
			inline-size: 64px;
		}
	}

	@media (max-width: 380px) {
		.aa-CoverImage {
			display: none;
		}

		.aa-LinkItem-Content {
			align-items: flex-start;
		}

		.aa-Icon {
			margin-top: 0.1rem;
		}

		.aa-LinkDescription {
			-webkit-line-clamp: unset;
		}
	}
</style>
